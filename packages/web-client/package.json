{
	"name": "@trading-assistant/web-client",
	"description": "Trading Assistant - Web Client",
	"private": true,
	"version": "0.0.0",
	"license": "AGPL-3.0-or-later",
	"type": "module",
	"author": "Doug Frei <doug@dougfrei.com>",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"lint": "eslint \"{src,tests}/**/*.{ts,tsx}\"",
		"lint:fix": "eslint \"{src,tests}/**/*.{ts,tsx}\" --fix",
		"check-types": "tsc --noEmit",
		"test": "vitest run --exclude \"**/__playwright-tests__/**\"",
		"test:watch": "vitest watch --exclude \"**/__playwright-tests__/**\"",
		"playwright": "playwright test",
		"playwright:ui": "playwright test --ui",
		"playwright:server": "DEV_HOST=\"localhost\" vite preview"
	},
	"dependencies": {
		"@date-fns/tz": "^1.2.0",
		"@mantine/charts": "^7.14.3",
		"@mantine/core": "^7.14.3",
		"@mantine/dates": "^7.14.3",
		"@mantine/form": "^7.14.3",
		"@mantine/hooks": "^7.14.3",
		"@mantine/notifications": "^7.14.3",
		"@mantine/spotlight": "^7.14.3",
		"@tabler/icons-react": "3.19.0",
		"@tanstack/react-query": "^5.62.2",
		"@tanstack/react-router": "^1.85.5",
		"@trading-assistant/common": "workspace:*",
		"date-fns": "^4.1.0",
		"graphql": "^16.9.0",
		"graphql-request": "^7.1.2",
		"lightweight-charts": "^4.2.1",
		"mantine-form-valibot-resolver": "^3.0.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-ts-tradingview-widgets": "^1.2.5",
		"valibot": "1.0.0-beta.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.16.0",
		"@playwright/test": "^1.49.0",
		"@storybook/addon-essentials": "^8.4.6",
		"@storybook/addon-interactions": "^8.4.6",
		"@storybook/addon-links": "^8.4.6",
		"@storybook/addon-mdx-gfm": "^8.4.6",
		"@storybook/addon-onboarding": "^8.4.6",
		"@storybook/blocks": "^8.4.6",
		"@storybook/client-api": "^7.6.17",
		"@storybook/react": "^8.4.6",
		"@storybook/react-vite": "^8.4.6",
		"@storybook/test": "^8.4.6",
		"@tanstack/router-devtools": "^1.85.5",
		"@tanstack/router-plugin": "^1.85.3",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.0.1",
		"@testing-library/user-event": "^14.5.2",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^22.10.1",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitejs/plugin-react-swc": "^3.7.2",
		"browserslist": "^4.24.2",
		"eslint": "^9.16.0",
		"eslint-plugin-react": "^7.37.2",
		"jsdom": "^25.0.1",
		"lightningcss": "^1.28.2",
		"msw": "^2.6.6",
		"playwright-msw": "^3.0.1",
		"postcss": "^8.4.49",
		"postcss-preset-mantine": "^1.17.0",
		"postcss-simple-vars": "^7.0.1",
		"prettier": "^3.4.1",
		"sass": "^1.82.0",
		"storybook": "^8.4.6",
		"storybook-dark-mode": "^4.0.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.17.0",
		"vite": "^5.4.11",
		"vite-tsconfig-paths": "^5.1.3",
		"vitest": "^2.1.8"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"printWidth": 100,
		"trailingComma": "none",
		"overrides": [
			{
				"files": "*.scss",
				"options": {
					"singleQuote": false
				}
			}
		],
		"importOrder": [
			"^components/(.*)$",
			"^[./]"
		],
		"importOrderSeparation": false,
		"importOrderSortSpecifiers": true,
		"plugins": [
			"@trivago/prettier-plugin-sort-imports"
		]
	}
}
