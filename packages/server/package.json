{
	"name": "@trading-assistant/server",
	"version": "0.0.0",
	"description": "Trading Assistant - Server",
	"author": "Doug Frei <doug@dougfrei.com>",
	"private": true,
	"license": "AGPL-3.0-or-later",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:erm": "nest start -e 'node --experimental-require-module'",
		"start:dev": "nest start --watch",
		"start:dev:erm": "nest start --watch -e 'node --experimental-require-module'",
		"start:dev-prod-env": "NODE_ENV=\"production\" nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:debug-chrome": "NODE_OPTIONS=\"--inspect\" nest start --watch",
		"start:prod": "node dist/main",
		"start:prod:erm": "node --experimental-require-module dist/main",
		"start:repl": "nest start --entryFile repl --watch",
		"lint": "eslint \"{src,apps,libs,test,cli,db-seed}/**/*.ts\"",
		"lint:fix": "eslint \"{src,apps,libs,test,cli,db-seed}/**/*.ts\" --fix",
		"test": "tsx --test ./src/**/*.spec.*",
		"check-types": "tsc --noEmit",
		"cli": "ts-node -r tsconfig-paths/register src/cli-main.ts"
	},
	"dependencies": {
		"@faker-js/faker": "^8.4.1",
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/apollo": "^12.2.0",
		"@nestjs/axios": "^3.0.3",
		"@nestjs/bull": "^10.2.1",
		"@nestjs/cache-manager": "^2.2.2",
		"@nestjs/common": "^10.4.4",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.4.4",
		"@nestjs/graphql": "^12.2.0",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/platform-express": "^10.4.4",
		"@trading-assistant/common": "workspace:*",
		"adm-zip": "^0.5.16",
		"apollo-server-express": "^3.13.0",
		"bcrypt": "^5.1.1",
		"bull": "^4.16.3",
		"cache-manager": "^5.7.6",
		"cache-manager-redis-store": "^2.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cli-progress": "^3.12.0",
		"commander": "^12.1.0",
		"cookie-parser": "^1.4.6",
		"csv-parse": "^5.5.6",
		"dataloader": "^2.2.2",
		"date-fns": "^2.30.0",
		"dotenv": "^16.4.5",
		"glob": "^11.0.0",
		"graphql": "^16.9.0",
		"graphql-scalars": "^1.23.0",
		"graphql-type-json": "^0.3.2",
		"graphql-upload": "^16.0.2",
		"kysely": "^0.27.4",
		"nanoid": "^3.3.7",
		"nanoid-dictionary": "^4.3.0",
		"nestjs-pino": "^4.1.0",
		"node-html-parser": "^6.1.13",
		"nodemailer": "^6.9.15",
		"pg": "^8.13.0",
		"pino-pretty": "^11.2.2",
		"read": "^3.0.1",
		"redis": "^4.7.0",
		"rimraf": "^6.0.1",
		"rxjs": "^7.8.1",
		"technicalindicators": "^3.1.0",
		"temporal-polyfill": "^0.2.5",
		"valibot": "1.0.0-beta.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.11.1",
		"@nestjs/cli": "^10.4.5",
		"@nestjs/schematics": "^10.1.4",
		"@nestjs/testing": "^10.4.4",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/adm-zip": "^0.5.5",
		"@types/bcrypt": "^5.0.2",
		"@types/cache-manager": "^4.0.6",
		"@types/cache-manager-redis-store": "^2.0.4",
		"@types/cli-progress": "^3.11.6",
		"@types/cookie-parser": "^1.4.7",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^4.17.21",
		"@types/graphql-upload": "^16.0.7",
		"@types/multer": "^1.4.12",
		"@types/nanoid-dictionary": "^4.2.3",
		"@types/node": "^22.7.4",
		"@types/nodemailer": "^6.4.16",
		"@types/pg": "^8.11.10",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^8.8.0",
		"@typescript-eslint/parser": "^8.8.0",
		"eslint": "^9.11.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"msw": "^2.4.9",
		"prettier": "^3.3.3",
		"source-map-support": "^0.5.21",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.8.0"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"printWidth": 100,
		"trailingComma": "none",
		"overrides": [
			{
				"files": "*.scss",
				"options": {
					"singleQuote": false
				}
			}
		],
		"importOrderParserPlugins": [
			"typescript",
			"jsx",
			"decorators-legacy"
		],
		"importOrder": [
			"^components/(.*)$",
			"^[./]"
		],
		"importOrderSeparation": false,
		"importOrderSortSpecifiers": true,
		"plugins": [
			"@trivago/prettier-plugin-sort-imports"
		]
	},
	"engines": {
		"node": ">=22"
	}
}
